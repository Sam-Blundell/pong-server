{
    "extends": ["airbnb-base"],
    "env": {
        "node": true,
        "browser": true,
        "es2021": true,
        "mocha": true
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "import/extensions": ["off"]
    }
}